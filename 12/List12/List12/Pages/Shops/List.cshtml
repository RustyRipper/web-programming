@page
@model List12.Pages.Shops.ListModel

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>
<p>
    @ViewBag.Category
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].FilePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Article) {
    var pathToFile = item.FilePath != null ? "/upload/" + item.FilePath : "/image/" + "No.png";
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                <img style="height:50px" src="@pathToFile" />
            </td>
        </tr>
}
    </tbody>
</table>
